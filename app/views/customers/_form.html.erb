<br />
<%= simple_form_for(@customer, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.input :name, :input_html => { :class => "span6" } %>
  <%= f.input :contact_person, :input_html => { :class => "span6" } %>
  <%= f.input :phone %>
  <%= f.input :email %>
  <%= f.input :website %>
  <%= f.input :town %>
  <%= f.input :address %>
  <%= f.association :services, as: :check_boxes %>
  <%= f.input :details, :input_html => { :class => "span6" } %>
  <%= f.button :submit %>
<% end %>
