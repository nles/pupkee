<br />
<%= simple_form_for(@task, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.input :title, :input_html => { :class => "span6" } %>
  <%= f.input :deadline, :input_html => { :class => "span2" } %>
  <%= f.association :customer %>
  <%= f.association :users, :label => "Responsibles" %>
  <%= f.input :details, :input_html => { :class => "span6" } %>
  <%= f.input :flag, label: 'Flag', as: :radio_buttons, collection: [['none',0], [flag(1),1] ,[flag(2),2], [flag(3),3]] %>
  <%= f.input :done, label: 'Task status', as: :radio_buttons, collection: [['not done',false], ['done',true]] %>
  <%= f.input :billed, label: 'Bill status', as: :radio_buttons, collection: [['does not apply',2], ['billed',1] ,['not billed',0]] %>
  <%= f.button :submit %>
<% end %>
